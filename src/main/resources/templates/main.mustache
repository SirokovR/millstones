<html>
<body>
<div>
    <form method="post">
        <label>
            <input type="text" name="text" placeholder="Введите сообщение">
        </label>
        <label>
            <input type="text" name="tag" placeholder="# Tag">
        </label>
        <button type="submit">Добавить</button>
    </form>
</div>
<div>List Messages</div>
{{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
    </div>
{{/messages}}

</body>
</html>